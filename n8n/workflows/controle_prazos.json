        }
      }
    },
    {
      "parameters": {
        "jsCode": "// Identifica prazos cr√≠ticos e calcula lembretes\nconst prazos = $input.all().map(item => item.json);\nconst hoje = new Date();\nhoje.setHours(0, 0, 0, 0);\n\nconst prazosProcessados = [];\n\nfor (const prazo of prazos) {\n  const dataVenc = new Date(prazo.data_vencimento);\n  dataVenc.setHours(0, 0, 0, 0);\n  \n  const diasRestantes = Math.ceil((dataVenc - hoje) / (1000 * 60 * 60 * 24));\n  \n  let status = 'pendente';\n  let prioridade = 'normal';\n  \n  if (diasRestantes < 0) {\n    status = 'vencido';\n    prioridade = 'critico';\n  } else if (diasRestantes <= 1) {\n    prioridade = 'critico';\n  } else if (diasRestantes <= 3) {\n    prioridade = 'alta';\n  } else if (diasRestantes <= 7) {\n    prioridade = 'media';\n  }\n  \n  // Calcula data de lembrete (3 dias antes)\n  const dataLembrete = new Date(dataVenc);\n  dataLembrete.setDate(dataLembrete.getDate() - 3);\n  \n  prazosProcessados.push({\n    ...prazo,\n    dias_restantes: diasRestantes,\n    status: status,\n    prioridade: prioridade,\n    data_lembrete: dataLembrete.toISOString().split('T')[0],\n    precisa_alerta: diasRestantes <= 3 || diasRestantes < 0\n  });\n}\n\nreturn prazosProcessados.map(p => ({ json: p }));"
      },
      "id": "process-prazos",
      "name": "Processar Prazos",
