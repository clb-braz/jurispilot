        "query": "SELECT * FROM prazos WHERE status = 'pendente' AND data_vencimento >= CURRENT_DATE ORDER BY data_vencimento ASC"
      },
      "id": "get-prazos",
      "name": "Buscar Prazos Pendentes",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2,
      "position": [450, 300],
      "credentials": {
        "postgres": {
          "id": "postgres-credentials",
