# ============================================
# JurisPilot - Variáveis de Ambiente
# ============================================
# Copie este arquivo para .env e configure as variáveis
# cp .env.example .env
# ============================================

# --------------------------------------------
# PostgreSQL - Banco de Dados
# --------------------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_NAME=jurispilot
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL_MODE=prefer
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# --------------------------------------------
# n8n - Automação e Workflows
# --------------------------------------------
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=admin
N8N_WEBHOOK_URL=http://localhost:5678/webhook
N8N_API_URL=http://localhost:5678/api/v1

# --------------------------------------------
# Python API Server
# --------------------------------------------
PYTHON_API_HOST=0.0.0.0
PYTHON_API_PORT=5000
PYTHON_API_WORKERS=4
PYTHON_API_RELOAD=true
PYTHON_API_DEBUG=false

# --------------------------------------------
# Storage - Armazenamento de Documentos
# --------------------------------------------
STORAGE_PATH=./storage
STORAGE_DOCUMENTS_PATH=./storage/documents
STORAGE_UPLOADS_PATH=./storage/uploads
STORAGE_MAX_FILE_SIZE=10485760
STORAGE_ALLOWED_EXTENSIONS=pdf,doc,docx,jpg,jpeg,png,txt

# --------------------------------------------
# Tesseract OCR - Processamento de Imagens
# --------------------------------------------
TESSERACT_PATH=
# Windows: C:\Program Files\Tesseract-OCR\tesseract.exe
# Linux: /usr/bin/tesseract
# Mac: /usr/local/bin/tesseract

# --------------------------------------------
# WhatsApp API - Integração WhatsApp
# --------------------------------------------
# Opção 1: Evolution API
WHATSAPP_API_TYPE=evolution
WHATSAPP_API_URL=http://localhost:8080
WHATSAPP_API_KEY=your_evolution_api_key
WHATSAPP_INSTANCE_NAME=jurispilot
WHATSAPP_WEBHOOK_URL=http://localhost:5678/webhook/whatsapp

# Opção 2: WhatsApp Business API (Oficial)
# WHATSAPP_API_TYPE=official
# WHATSAPP_BUSINESS_ACCOUNT_ID=
# WHATSAPP_ACCESS_TOKEN=
# WHATSAPP_PHONE_NUMBER_ID=
# WHATSAPP_VERIFY_TOKEN=

# Opção 3: Twilio WhatsApp
# WHATSAPP_API_TYPE=twilio
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_WHATSAPP_FROM=

# --------------------------------------------
# Google Calendar - Integração Calendário
# --------------------------------------------
GOOGLE_CALENDAR_ENABLED=false
GOOGLE_CALENDAR_CLIENT_ID=your_client_id.apps.googleusercontent.com
GOOGLE_CALENDAR_CLIENT_SECRET=your_client_secret
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:5000/auth/google/callback
GOOGLE_CALENDAR_SCOPES=https://www.googleapis.com/auth/calendar
GOOGLE_CALENDAR_REFRESH_TOKEN=

# --------------------------------------------
# Email - SMTP para Notificações
# --------------------------------------------
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your_email@gmail.com
EMAIL_SMTP_PASSWORD=your_app_password
EMAIL_SMTP_TLS=true
EMAIL_FROM_NAME=JurisPilot
EMAIL_FROM_ADDRESS=noreply@jurispilot.com.br

# --------------------------------------------
# Segurança - JWT e Criptografia
# --------------------------------------------
JWT_SECRET_KEY=change_this_to_a_random_secret_key_min_32_chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
ENCRYPTION_KEY=change_this_to_a_random_32_char_key
ENCRYPTION_ALGORITHM=AES-256-GCM

# --------------------------------------------
# URLs e Domínios - Links do Sistema
# --------------------------------------------
BASE_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000
SITE_URL=http://localhost:8080
UPLOAD_LINK_EXPIRATION_HOURS=24
UPLOAD_LINK_SECRET=change_this_secret_for_upload_links

# --------------------------------------------
# Logging - Configuração de Logs
# --------------------------------------------
LOG_LEVEL=INFO
LOG_FILE=./logs/jurispilot.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# --------------------------------------------
# Ambiente - Configuração do Ambiente
# --------------------------------------------
ENVIRONMENT=development
# Opções: development, staging, production
DEBUG=true
TESTING=false

# --------------------------------------------
# Backup - Configuração de Backups
# --------------------------------------------
BACKUP_ENABLED=true
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *
# Formato cron: minuto hora dia mês dia_semana

# --------------------------------------------
# Integrações Externas (Opcionais)
# --------------------------------------------
# OpenAI (para processamento avançado de texto)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo

# Google Cloud (para OCR avançado)
GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_CLOUD_CREDENTIALS_PATH=

# AWS S3 (para storage em nuvem)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=us-east-1
